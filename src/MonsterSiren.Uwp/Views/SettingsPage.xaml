<Page
    x:Class="MonsterSiren.Uwp.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="using:MonsterSiren.Uwp"
    xmlns:contract5Present="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 5)"
    xmlns:controls="using:MonsterSiren.Uwp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:Baka632.Library.Uwp.CSharp.Helpers"
    xmlns:local="using:MonsterSiren.Uwp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mediaCore="using:Windows.Media.Core"
    xmlns:mediaProps="using:Windows.Media.MediaProperties"
    xmlns:models="using:MonsterSiren.Uwp.Models"
    xmlns:msrHelpers="using:MonsterSiren.Uwp.Helpers"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:services="using:MonsterSiren.Uwp.Services"
    xmlns:viewmodels="using:MonsterSiren.Uwp.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:SettingsViewModel}"
    Loaded="OnSettingsPageLoaded"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,5"
            Orientation="Horizontal">
            <FontIcon
                Margin="0,0,10,0"
                HorizontalAlignment="Center"
                FontSize="40"
                Glyph="&#xE115;" />
            <TextBlock
                x:Uid="SettingsTextBlock"
                Margin="0,0,5,0"
                HorizontalAlignment="Center"
                FontSize="30" />
        </StackPanel>

        <Pivot Grid.Row="1" Margin="-10,0,0,0">
            <PivotItem x:Uid="PresentationPivotItem">
                <ScrollViewer Margin="0,5,0,0">
                    <StackPanel>
                        <controls:SettingsExpander x:Uid="SettingsPage_AppLanguage">
                            <controls:SettingsExpander.HeaderIcon>
                                <FontIcon Glyph="&#xF2B7;" />
                            </controls:SettingsExpander.HeaderIcon>
                            <controls:SettingsExpander.CustomHeaderElement>
                                <muxc:InfoBar
                                    Margin="0,0,0,10"
                                    x:Uid="SettingsPage_ChangeLanguageRestartRequired"
                                    IsClosable="False"
                                    IsOpen="True"
                                    Severity="Informational" />
                            </controls:SettingsExpander.CustomHeaderElement>

                            <controls:SettingsCard x:Uid="SettingsPage_AppDisplayLanguage">
                                <ComboBox ItemsSource="{x:Bind ViewModel.AppLanguages, Mode=OneWay}" SelectedIndex="{x:Bind ViewModel.SelectedAppLanguageIndex, Mode=TwoWay}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate x:DataType="models:AppLanguage">
                                            <TextBlock Text="{x:Bind DisplayName}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </controls:SettingsCard>
                        </controls:SettingsExpander>

                        <controls:SettingsExpander x:Uid="SettingsPage_AppBackground">
                            <controls:SettingsExpander.HeaderIcon>
                                <FontIcon Glyph="&#xEF1F;" />
                            </controls:SettingsExpander.HeaderIcon>

                            <controls:SettingsCard x:Uid="SettingsPage_AppBackgroundConfig">
                                <ComboBox ItemsSource="{x:Bind ViewModel.AppBackgroundModes, Mode=OneWay}" SelectedIndex="{x:Bind ViewModel.SelectedAppBackgroundModeIndex, Mode=TwoWay}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate x:DataType="models:AppBackgroundMode">
                                            <TextBlock Text="{x:Bind Converter={StaticResource AppBackgroundModeToStringConverter}}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </controls:SettingsCard>

                            <controls:SettingsCard x:Uid="SettingsPage_AppColorTheme">
                                <ComboBox ItemsSource="{x:Bind ViewModel.AppColorThemes, Mode=OneWay}" SelectedIndex="{x:Bind ViewModel.SelectedAppColorThemeIndex, Mode=TwoWay}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate x:DataType="models:AppColorTheme">
                                            <TextBlock Text="{x:Bind Converter={StaticResource AppColorThemeToStringConverter}}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </controls:SettingsCard>
                        </controls:SettingsExpander>

                        <controls:SettingsExpander x:Uid="SettingsPage_GlanceSettings">
                            <controls:SettingsExpander.HeaderIcon>
                                <FontIcon Glyph="&#xE052;" />
                            </controls:SettingsExpander.HeaderIcon>

                            <controls:SettingsCard x:Uid="SettingsPage_GlanceMoveSettings">
                                <ToggleSwitch IsOn="{x:Bind ViewModel.EnableGlanceBurnProtection, Mode=TwoWay}" />
                            </controls:SettingsCard>

                            <controls:SettingsCard x:Uid="SettingsPage_GlanceUseLowBrightness">
                                <ToggleSwitch IsOn="{x:Bind ViewModel.GlanceModeUseLowerBrightness, Mode=TwoWay}" />
                            </controls:SettingsCard>

                            <controls:SettingsCard x:Uid="SettingsPage_GlanceRemainDisplayOn">
                                <ToggleSwitch IsOn="{x:Bind ViewModel.GlanceModeRemainDisplayOn, Mode=TwoWay}" />
                            </controls:SettingsCard>
                        </controls:SettingsExpander>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>

            <PivotItem x:Uid="DownloadPivotItem">
                <ScrollViewer Margin="0,5,0,0">
                    <StackPanel>
                        <controls:SettingsExpander x:Uid="SettingsPage_PathConfig">
                            <controls:SettingsExpander.HeaderIcon>
                                <FontIcon Glyph="&#xE159;" />
                            </controls:SettingsExpander.HeaderIcon>
                            <controls:SettingsExpander.CustomHeaderElement>
                                <StackPanel contract5Present:Spacing="5">
                                    <muxc:InfoBar
                                        x:Uid="SettingsPage_DownloadFolderRedirected"
                                        IsClosable="False"
                                        IsOpen="{x:Bind ViewModel.IsDownloadFolderRedirected, Mode=OneWay}"
                                        Severity="Warning" />
                                    <muxc:InfoBar
                                        x:Uid="SettingsPage_PlaylistFolderRedirected"
                                        IsClosable="False"
                                        IsOpen="{x:Bind ViewModel.IsPlaylistFolderRedirected, Mode=OneWay}"
                                        Severity="Warning" />
                                </StackPanel>
                            </controls:SettingsExpander.CustomHeaderElement>

                            <controls:SettingsCard
                                x:Uid="SettingsPage_DownloadPath"
                                Description="{x:Bind ViewModel.DownloadPath, Mode=OneWay}"
                                HeaderStyle="{StaticResource BaseTextBlockStyle}">
                                <controls:SettingsCard.DescriptionStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="IsTextSelectionEnabled" Value="True" />
                                    </Style>
                                </controls:SettingsCard.DescriptionStyle>

                                <Button x:Uid="SettingsPage_PickButton" Command="{x:Bind ViewModel.PickDownloadFolderCommand}" />
                            </controls:SettingsCard>

                            <controls:SettingsCard
                                x:Uid="SettingsPage_PlaylistSavePath"
                                Description="{x:Bind ViewModel.PlaylistSavePath, Mode=OneWay}"
                                HeaderStyle="{StaticResource BaseTextBlockStyle}">
                                <controls:SettingsCard.DescriptionStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="IsTextSelectionEnabled" Value="True" />
                                    </Style>
                                </controls:SettingsCard.DescriptionStyle>

                                <Button x:Uid="SettingsPage_PickButton" Command="{x:Bind ViewModel.PickPlaylistFolderCommand}" />
                            </controls:SettingsCard>
                        </controls:SettingsExpander>

                        <controls:SettingsExpander x:Uid="SettingsPage_DownloadConfig">
                            <controls:SettingsExpander.HeaderIcon>
                                <FontIcon Glyph="&#xE118;" />
                            </controls:SettingsExpander.HeaderIcon>
                            <controls:SettingsExpander.CustomHeaderElement>
                                <muxc:InfoBar
                                    x:Uid="SettingsPage_EncodeNotAvailable"
                                    IsClosable="False"
                                    IsOpen="{x:Bind helpers:XamlHelper.ReverseBoolean(services:DownloadService.IsSupportCommonTranscode)}"
                                    Severity="Warning" />
                            </controls:SettingsExpander.CustomHeaderElement>

                            <controls:SettingsCard x:Uid="SettingsPage_DownloadLyric">
                                <ToggleSwitch IsOn="{x:Bind ViewModel.DownloadLyric, Mode=TwoWay}" />
                            </controls:SettingsCard>
                            <controls:SettingsCard x:Uid="SettingsPage_EnableTranscode">
                                <ToggleSwitch IsEnabled="{x:Bind services:DownloadService.IsSupportCommonTranscode}" IsOn="{x:Bind ViewModel.TranscodeDownloadedMusic, Mode=TwoWay}" />
                            </controls:SettingsCard>
                            <controls:SettingsCard x:Uid="SettingsPage_ReplaceInvaildCharsInDownloadedFileName">
                                <ToggleSwitch IsOn="{x:Bind ViewModel.ReplaceInvaildCharInDownloadedFileName, Mode=TwoWay}" />
                            </controls:SettingsCard>
                        </controls:SettingsExpander>

                        <controls:SettingsExpander x:Uid="SettingsPage_TranscodeConfig" Visibility="{x:Bind ViewModel.TranscodeDownloadedMusic, Mode=OneWay}">
                            <controls:SettingsExpander.HeaderIcon>
                                <FontIcon Glyph="&#xE189;" />
                            </controls:SettingsExpander.HeaderIcon>

                            <controls:SettingsCard x:Uid="SettingsPage_SelectTranscoder">
                                <ComboBox ItemsSource="{x:Bind ViewModel.AvailableCommonEncoders, Mode=OneWay}" SelectedIndex="{x:Bind ViewModel.SelectedCodecInfoIndex, Mode=TwoWay}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate x:DataType="mediaCore:CodecInfo">
                                            <TextBlock Text="{x:Bind Subtypes, Converter={StaticResource AudioGuidToStringConverter}}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </controls:SettingsCard>

                            <controls:SettingsCard x:Uid="SettingsPage_SelectTranscodeQuality">
                                <ComboBox ItemsSource="{x:Bind ViewModel.AudioEncodingQualities, Mode=OneWay}" SelectedIndex="{x:Bind ViewModel.SelectedTranscodeQualityIndex, Mode=TwoWay}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate x:DataType="mediaProps:AudioEncodingQuality">
                                            <TextBlock Text="{x:Bind Converter={StaticResource AudioEncodingQualityToStringConverter}}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </controls:SettingsCard>

                            <controls:SettingsCard x:Uid="SettingsPage_TranscodeKeepRawMusicFile">
                                <ToggleSwitch IsOn="{x:Bind ViewModel.PreserveRawMusicAfterTranscode, Mode=TwoWay}" />
                            </controls:SettingsCard>
                        </controls:SettingsExpander>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>

            <PivotItem x:Uid="AboutPivotItem">
                <ScrollViewer>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                        <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                            <Image
                                Width="90"
                                Height="90"
                                Margin="0,10,10,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Source="/Assets/App-Logo/Logo.png" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Style="{StaticResource SubheaderTextBlockStyle}"
                                Text="{x:Bind app:App.AppDisplayName}" />
                        </StackPanel>

                        <TextBlock
                            Margin="0,0,0,5"
                            Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind app:App.AppVersionWithText}" />

                        <HyperlinkButton Margin="0,0,0,5" NavigateUri="https://github.com/Baka632/MonsterSiren.Uwp">
                            <StackPanel Orientation="Horizontal">
                                <PathIcon
                                    Margin="0,0,5,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Data="M8 0c4.42 0 8 3.58 8 8a8.013 8.013 0 0 1-5.45 7.59c-.4.08-.55-.17-.55-.38 0-.27.01-1.13.01-2.2 0-.75-.25-1.23-.54-1.48 1.78-.2 3.65-.88 3.65-3.95 0-.88-.31-1.59-.82-2.15.08-.2.36-1.02-.08-2.12 0 0-.67-.22-2.2.82-.64-.18-1.32-.27-2-.27-.68 0-1.36.09-2 .27-1.53-1.03-2.2-.82-2.2-.82-.44 1.1-.16 1.92-.08 2.12-.51.56-.82 1.28-.82 2.15 0 3.06 1.86 3.75 3.64 3.95-.23.2-.44.55-.51 1.07-.46.21-1.61.55-2.33-.66-.15-.24-.6-.83-1.23-.82-.67.01-.27.38.01.53.34.19.73.9.82 1.13.16.45.68 1.31 2.69.94 0 .67.01 1.3.01 1.49 0 .21-.15.45-.55.38A7.995 7.995 0 0 1 0 8c0-4.42 3.58-8 8-8Z" />
                                <TextBlock x:Uid="RepoAddress" />
                            </StackPanel>
                        </HyperlinkButton>

                        <Button
                            Margin="0,0,0,5"
                            Background="Transparent"
                            Command="{x:Bind ViewModel.OpenUpdateInfoPageCommand}">
                            <TextBlock x:Uid="SettingsPage_OpenUpdateInfoPage" />
                        </Button>

                        <Button
                            Margin="0,0,0,5"
                            Background="Transparent"
                            Command="{x:Bind ViewModel.OpenCopyrightNoticeDialogCommand}">
                            <TextBlock x:Uid="SettingsPage_CopyrightStatement" />
                        </Button>

                        <Button
                            Margin="0,0,0,5"
                            Background="Transparent"
                            Command="{x:Bind ViewModel.OpenLogFolderCommand}"
                            Visibility="{x:Bind helpers:XamlHelper.ReverseVisibility(helpers:EnvironmentHelper.IsWindowsMobile)}">
                            <TextBlock x:Uid="SettingsPage_OpenLogFolder" />
                        </Button>

                        <Button Background="Transparent" Command="{x:Bind ViewModel.OpenCodecsInfoDialogCommand}">
                            <TextBlock x:Uid="SettingsPage_OpenCodecInfoDialog" />
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
