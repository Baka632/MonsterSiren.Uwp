<?xml version="1.0" encoding="utf-8" ?>
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">
    <CommandSet xml:lang="zh-hans-cn" Name="SoraRecordsCommandSet_zh-cn">
        <AppName>塞壬唱片</AppName>
        <Example>播放塞壬唱片的最新一张专辑</Example>
        <Command Name="soraRecords">
            <Example>你好，塞壬唱片</Example>
            <ListenFor RequireAppName="ExplicitlySpecified">[你好]{builtin:AppName}</ListenFor>
            <ListenFor RequireAppName="ExplicitlySpecified">{builtin:AppName}[你好]</ListenFor>
            <Feedback>正在打开 Sora 唱片...</Feedback>
            <Navigate/>
        </Command>
        <Command Name="playLatestAlbum">
            <Example>播放最新专辑</Example>
            <ListenFor>播放{msr}[的]最新[一张]专辑</ListenFor>
            <Feedback>正在准备最新一张专辑......</Feedback>
            <Navigate/>
        </Command>
        <Command Name="queryRecentAlbums">
            <Example>有哪些新专辑？</Example>
            <ListenFor>[最近]有哪些{msr}[的][新]专辑</ListenFor>
            <ListenFor>[最近的]{msr}[新]专辑</ListenFor>
            <Feedback>正在查询，请稍后......</Feedback>
            <VoiceCommandService Target="Baka632.SoraRecords.CortanaService"/>
        </Command>

        <Command Name="baka-eureka">
            <Example>Baka 喜欢谁？</Example>
            <ListenFor>{baka}喜欢谁</ListenFor>
            <ListenFor>{baka}喜欢[哪位][哪个]干员</ListenFor>
            <ListenFor>{baka}是[哪位][哪个]干员厨</ListenFor>
            <Feedback>当然是尤里卡啦！</Feedback>
            <VoiceCommandService Target="Baka632.SoraRecords.CortanaService"/>
        </Command>

        <PhraseList Label="baka">
            <Item>Baka</Item>
            <Item>Baka632</Item>
            <Item>632同学</Item>
            <Item>巴卡</Item>
        </PhraseList>
        <PhraseList Label="msr">
            <Item>塞壬唱片</Item>
            <Item>塞壬</Item>
        </PhraseList>
    </CommandSet>
</VoiceCommands>